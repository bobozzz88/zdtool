.container {
  padding: 20rpx;
}

.form {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background-color: #3cc51f;
  color: #fff;
  border: none;
  width: 100%;
}

.submit-btn:active {
  opacity: 0.8;
}