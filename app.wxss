/**app.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 底部导航栏样式 */
.tab-bar {
  border-top: 1px solid #eee;
}

/* 通用文本样式 */
text {
  font-size: 14px;
  color: #333;
}

/* 通用按钮样式 */
button {
  margin: 10px;
  background-color: #3cc51f;
  color: white;
  border: none;
  border-radius: 5px;
}

button:active {
  opacity: 0.8;
} 
